<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lay_item_choose_recipient"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imv_item_choose_recipi_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/icon_denglu_touxiang_weidenglu" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:id="@+id/tv_item_choose_recipi_all_name"
        android:textSize="15dp"
        android:textColor="@color/black_text_333"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imv_item_choose_recipi_all_choose"
        android:layout_width="wrap_content"
        android:src="@drawable/icon_xuanze_yes"
        android:visibility="gone"
        android:padding="10dp"
        android:layout_height="wrap_content" />
</LinearLayout>