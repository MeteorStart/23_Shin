<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiujichuanmei.a23_haoxin.mvp.view.activity.ChooseAddressActivity">

    <include
        android:id="@+id/lay_act_choose_address_top"
        layout="@layout/act_top" />

    <TextView
        android:id="@+id/tv_act_choose_address_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lay_act_choose_address_top"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/lay_act_choose_address_top"
        android:layout_marginRight="20px"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/act_main_line"
        android:textSize="30px" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tv_act_choose_address_success"
        android:background="@color/cut_line" />

    <TextView
        android:id="@+id/tv_act_choose_address_now_position"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_below="@+id/lay_act_choose_address_top"
        android:layout_marginTop="1px"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:text="使用当前位置"
        android:textColor="@color/black_text_333"
        android:textSize="26px" />

    <ImageView
        android:id="@+id/imv_act_choose_address_line"
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_below="@+id/tv_act_choose_address_now_position"
        android:background="@color/cut_line" />

    <LinearLayout
        android:id="@+id/lay_act_choose_address_address"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_below="@+id/imv_act_choose_address_line"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:enabled="false"
            android:gravity="center_vertical"
            android:text="省-市-区"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_act_choose_address_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10px"
            android:drawableRight="@drawable/icon_xuanze_jinru"
            android:enabled="false"
            android:text="省-市-区"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line" />

    <LinearLayout
        android:id="@+id/lay_act_choose_address_store"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_below="@+id/lay_act_choose_address_address"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="1px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:enabled="false"
            android:gravity="center_vertical"
            android:text="位置"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_act_choose_address_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10px"
            android:drawableRight="@drawable/icon_xuanze_jinru"
            android:enabled="false"
            android:text="商家名称"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />
    </LinearLayout>
</RelativeLayout>
