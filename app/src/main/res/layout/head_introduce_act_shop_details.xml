<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/text_act_shop_detail_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺名称"
            android:textColor="@color/black_text_333"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text_act_shop_detail_shop_address_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_act_shop_detail_shop_name"
            android:layout_marginTop="12dp"
            android:text="地址："
            android:textColor="@color/black_text_666"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/text_act_shop_detail_shop_address"
            android:layout_toRightOf="@id/text_act_shop_detail_shop_address_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/text_act_shop_detail_shop_name"
            android:layout_marginTop="12dp"
            android:text="地址："
            android:textColor="@color/black_text_666"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/text_act_shop_detail_shop_address_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/text_act_shop_detail_shop_address"
            android:drawableLeft="@drawable/icon_dianpu_position"
            android:drawablePadding="5dp"
            android:text="到这去"
            android:textColor="@color/black_text_666"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/text_act_shop_detail_shop_time_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_act_shop_detail_shop_address"
            android:layout_marginTop="12dp"
            android:text="营业时间："
            android:textColor="@color/black_text_666"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/text_act_shop_detail_shop_time"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/text_act_shop_detail_shop_time_show"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_act_shop_detail_shop_address"
            android:layout_marginTop="12dp"
            android:text="营业时间："
            android:textColor="@color/black_text_666"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/text_act_shop_detail_shop_vr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text_act_shop_detail_shop_address"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/icon_dianpu_vr"
            android:drawablePadding="5dp"
            android:text="vr全景"
            android:textColor="@color/black_text_666"
            android:textSize="13dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white_f8" />

    <TextView
        android:id="@+id/text_act_shop_detail_shop_unclaimed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:text="未领取信件"
        android:textColor="@color/black_text_333"
        android:textSize="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white_f8" />
</LinearLayout>