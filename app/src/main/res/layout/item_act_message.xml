<?xml version="1.0" encoding="utf-8"?><!-- 流通信件item -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_act_message_time"
        android:textSize="12dp"
        android:textColor="@color/black_text_999"
        android:layout_width="90dp"
        android:text="2017-05-21"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_act_message_content"
        android:textSize="14dp"
        android:textColor="@color/black_text_333"
        android:layout_width="match_parent"
        android:text="2017-05-21"
        android:layout_toRightOf="@id/tv_act_message_time"
        android:layout_height="wrap_content" />

</RelativeLayout>