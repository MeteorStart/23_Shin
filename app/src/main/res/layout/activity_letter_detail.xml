<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/lay_act_letter_details"
    tools:context="com.xiujichuanmei.a23_haoxin.mvp.view.activity.LetterDetailActivity">

    <include layout="@layout/act_top" />

    <ImageView
        android:id="@+id/imv_act_demand_details_avatar"
        android:layout_width="140px"
        android:layout_height="140px"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_denglu_touxiang_weidenglu" />

    <TextView
        android:id="@+id/tv_act_demand_details_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px"
        android:text="用户名"
        android:textColor="@color/act_main_line"
        android:textSize="30px" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="86px"
        android:background="@color/cut_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="26px"
        android:text="Ta的信件"
        android:textColor="@color/black_text_333"
        android:textSize="30px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="26px"
                android:layout_weight="2"
                android:drawableLeft="@drawable/icon_fabu_title"
                android:drawablePadding="10px"
                android:text="标题"
                android:textColor="@color/black_text_666"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_act_letter_detail_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="26px"
                android:layout_weight="4"
                android:drawablePadding="10px"
                android:text="该信件没有标题"
                android:textColor="@color/black_text_666"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="26px"
                android:layout_weight="2"
                android:drawableLeft="@drawable/icon_fabu_huati"
                android:drawablePadding="10px"
                android:text="话题"
                android:textColor="@color/black_text_666"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_act_letter_detail_topic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="26px"
                android:layout_weight="4"
                android:drawablePadding="10px"
                android:text="该信件没有话题"
                android:textColor="@color/black_text_666"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="26px"
                android:layout_weight="2"
                android:drawableLeft="@drawable/icon_fabu_saoyisao"
                android:drawablePadding="10px"
                android:text="信件编号"
                android:textColor="@color/black_text_666"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_act_letter_detail_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="26px"
                android:layout_weight="4"
                android:drawablePadding="10px"
                android:text="标题"
                android:textColor="@color/black_text_666"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/shop"
                android:layout_marginLeft="20px"
                android:layout_marginTop="26px"
                android:layout_weight="2"
                android:drawablePadding="10px"
                android:text="所在店铺"
                android:textColor="@color/black_text_666"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_act_letter_detail_shope"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="26px"
                android:layout_weight="4"
                android:drawablePadding="10px"
                android:text="标题"
                android:textColor="@color/black_text_666"
                android:textSize="30px" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_act_demand_details_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="100px"
        android:background="@drawable/select_btn_act_login"
        android:text="预约"
        android:textColor="@color/white"
        android:textSize="32px" />
</LinearLayout>
