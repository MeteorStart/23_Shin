<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_act_frag_user_find_sub_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_xinjian_label_huati"
                android:drawablePadding="5dp"
                android:text="#520告白"
                android:textColor="@color/yellow_item_shop_type"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/text_frag_user_find_sub_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="编号：26471"
                android:textColor="@color/black_text_666"
                android:textSize="13dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/text_frag_user_find_sub_avatar_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_text_item_shap_details"
                android:drawableLeft="@drawable/icon_xinjian_time"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="剩余时间"
                android:textColor="@color/act_main_line"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/imv_frag_user_find_sub_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_xinjian_erweima" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>