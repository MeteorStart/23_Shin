<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp">
    <!-- 用户找信 预约信件页面item -->
    <ImageView
        android:id="@+id/imv_frag_user_find_sub_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_denglu_touxiang_weidenglu" />

    <RelativeLayout
        android:id="@+id/rel_frag_user_find_sub_item"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/imv_frag_user_find_sub_avatar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_frag_user_find_sub_avatar_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隔壁王小明"
                    android:textColor="@color/black_text_333"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/text_frag_user_find_sub_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="编号：26471"
                    android:textColor="@color/black_text_666"
                    android:textSize="13dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/text_act_frag_user_find_sub_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_xinjian_label_huati"
                    android:drawablePadding="5dp"
                    android:text="#520告白"
                    android:textColor="@color/yellow_item_shop_type"
                    android:textSize="13dp" />

                <ImageView
                    android:id="@+id/imv_frag_user_find_sub_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_xinjian_erweima" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/text_frag_user_find_sub_shop_down_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imv_frag_user_find_sub_avatar"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imv_frag_user_find_sub_avatar"
        android:background="@drawable/shape_bg_text_item_shap_details"
        android:drawableLeft="@drawable/icon_xinjian_time"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="剩余时间"
        android:textColor="@color/act_main_line"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_frag_user_find_sub_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_frag_user_find_sub_shop_down_time"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rel_frag_user_find_sub_item"
        android:drawableLeft="@drawable/icon_fabu_position"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="到这去"
        android:textColor="@color/black_text_666"
        android:textSize="13dp" />
</RelativeLayout>