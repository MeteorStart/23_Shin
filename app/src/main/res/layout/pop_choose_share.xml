<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_pop_choose_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f8">

    <LinearLayout
        android:id="@+id/lay_pop_share"
        android:layout_width="match_parent"
        android:layout_height="220px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20px"
        android:paddingRight="20px">

        <ImageView
            android:id="@+id/imv_pop_choose_share_weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="22px"
            android:layout_weight="1.0"
            android:src="@drawable/icon_dengxin_fenxiang_weixin" />

        <ImageView
            android:id="@+id/imv_pop_choose_share_pengyouquan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="22px"
            android:layout_weight="1.0"
            android:src="@drawable/icon_dengxin_fenxiang_pengyouquan" />

        <ImageView
            android:id="@+id/imv_pop_choose_share_xinlang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="22px"
            android:layout_weight="1.0"
            android:src="@drawable/icon_dengxin_fenxiang_xinlang" />

        <ImageView
            android:id="@+id/imv_pop_choose_share_qqkongjian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="22px"
            android:layout_weight="1.0"
            android:src="@drawable/icon_dengxin_fenxiang_qqkongjian" />

        <ImageView
            android:id="@+id/imv_pop_choose_share_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="22px"
            android:layout_weight="1.0"
            android:src="@drawable/icon_dengxin_fenxiang_qq" />

        <ImageView
            android:id="@+id/imv_pop_choose_share_lianjie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:src="@drawable/icon_dengxin_fenxiang_lianjie" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imv_pop_choose_share_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/lay_pop_share"
        android:background="@color/cut_line" />

    <ImageView
        android:id="@+id/imv_pop_choose_share_close"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:layout_below="@+id/imv_pop_choose_share_line"
        android:layout_centerHorizontal="true"
        android:padding="20px"
        android:src="@drawable/icon_dengxin_fenxiang_guanbi" />
</RelativeLayout>