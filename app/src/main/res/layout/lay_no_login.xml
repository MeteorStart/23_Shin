<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imv_act_main_left_no_login_avatar"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250px"
        android:src="@drawable/icon_denglu_touxiang_weidenglu" />

    <TextView
        android:id="@+id/text_act_main_left_no_login_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imv_act_main_left_no_login_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24px"
        android:text="登录以后才能查看主页"
        android:textColor="@color/gray_9"
        android:textSize="24px" />

    <Button
        android:id="@+id/btn_act_main_left_no_login_login"
        android:layout_width="500px"
        android:layout_height="80px"
        android:layout_below="@+id/text_act_main_left_no_login_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100px"
        android:background="@drawable/shape_bg_btn_item_shap_details"
        android:text="登录"
        android:textColor="@color/act_main_line"
        android:textSize="32px" />

    <Button
        android:id="@+id/btn_act_main_left_no_login_sing_in"
        android:layout_width="500px"
        android:layout_height="80px"
        android:layout_below="@id/btn_act_main_left_no_login_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px"
        android:background="@drawable/shape_bg_btn_item_shap_details"
        android:text="注册"
        android:textColor="@color/act_main_line"
        android:textSize="32px" />

</RelativeLayout>