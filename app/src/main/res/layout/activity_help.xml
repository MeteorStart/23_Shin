<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f8"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.xiujichuanmei.a23_haoxin.mvp.view.activity.HelpActivity">

    <include layout="@layout/act_top" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line" />

    <EditText
        android:id="@+id/edit_act_help"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:background="@color/white"
        android:gravity="start"
        android:hint="请告诉我们您的意见"
        android:padding="20px"
        android:textColor="@color/black_text_666"
        android:textColorHint="@color/black_text_hint"
        android:textSize="26px" />

    <Button
        android:id="@+id/btn_act_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="100px"
        android:background="@drawable/select_btn_bg"
        android:enabled="false"
        android:text="确定"
        android:textColor="@drawable/select_btn_text_color_act_login"
        android:textSize="32px" />
</LinearLayout>
