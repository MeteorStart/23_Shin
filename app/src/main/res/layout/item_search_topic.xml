<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imv_item_search_avatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_denglu_touxiang_weidenglu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <com.project.lx.baseproject.widget.MyTextView
            android:id="@+id/tv_item_search_topic_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="#TK的真实年龄"
            android:textColor="@color/black_text_333"
            android:textSize="13dp" />

        <com.project.lx.baseproject.widget.MyTextView
            android:id="@+id/tv_item_search_topic_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:maxLines="3"
            android:gravity="center_vertical"
            android:text="#TK的真实年龄"
            android:textColor="@color/black_text_666"
            android:textSize="10dp" />
    </LinearLayout>
</LinearLayout>