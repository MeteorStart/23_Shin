<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88px"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10px"
    android:paddingLeft="20px"
    android:paddingRight="20px"
    android:paddingTop="10px">

    <EditText
        android:id="@+id/edit_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@drawable/shape_bg_edit_search"
        android:drawableLeft="@drawable/icon_wo_shouye_serch"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:drawablePadding="10px"
        android:hint="请输入故事内容 / 故事名称"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:textColor="@color/black_text_333"
        android:textColorHint="@color/black_text_hint"
        android:textSize="24px" />

    <TextView
        android:id="@+id/tv_edit_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20px"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/black_text_333"
        android:textSize="28px"
        android:visibility="visible" />
</LinearLayout>