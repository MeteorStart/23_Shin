<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="20px"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/icon_gerenzhuye_tankuang_bj"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pop_user_info_share"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:drawableLeft="@drawable/icon_gerenzhuye_tankuang_fenxiang"
            android:drawablePadding="10px"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/act_main_line"
            android:textSize="28px" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cut_line" />

        <TextView
            android:id="@+id/tv_pop_user_info_report"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:drawableLeft="@drawable/icon_gerenzhuye_tankuang_jubao"
            android:drawablePadding="10px"
            android:gravity="center"
            android:text="举报"
            android:textColor="@color/act_main_line"
            android:textSize="28px" />

    </LinearLayout>

</LinearLayout>
