<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f8"
    android:orientation="vertical"
    tools:context="com.xiujichuanmei.a23_haoxin.mvp.view.activity.SettingActivity">

    <include layout="@layout/act_top" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line_seting" />

    <RelativeLayout
        android:id="@+id/rel_act_setting_avatar"
        android:layout_width="match_parent"
        android:layout_height="198px"
        android:background="@color/white"
        android:paddingLeft="20px"
        android:paddingRight="20px">

        <ImageView
            android:id="@+id/imv_act_setting_avatar"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_denglu_touxiang_weidenglu" />

        <TextView
            android:id="@+id/tv_act_setting_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:layout_toRightOf="@+id/imv_act_setting_avatar"
            android:text="修改头像"
            android:textColor="@color/black_text_333"
            android:textSize="30px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_xuanze_jinru" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line_seting" />

    <RelativeLayout
        android:id="@+id/rel_act_setting_change_name"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:layout_marginTop="1px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="昵称"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_toLeftOf="@+id/imv_right"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:text="昵称"
            android:textColor="@color/black_text_333"
            android:textSize="26px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_xuanze_jinru" />
    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line_seting" />

    <RelativeLayout
        android:id="@+id/rel_act_setting_change_password"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:layout_marginTop="1px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_xuanze_jinru" />
    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line_seting" />

    <RelativeLayout
        android:id="@+id/rel_act_setting_msg"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:layout_marginTop="1px"
        android:background="@color/white"
        android:paddingLeft="20px"
        android:paddingRight="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="消息设置"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_xuanze_jinru" />
    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line_seting" />

    <RelativeLayout
        android:id="@+id/rel_act_setting_clear"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:layout_marginTop="1px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="清理缓存"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_xuanze_jinru" />

        <TextView
            android:id="@+id/tv_act_setting_clear"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black_text_333"
            android:textSize="26px"
            android:text="30M"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line_seting" />

    <RelativeLayout
        android:id="@+id/rel_act_setting_help"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:layout_marginTop="1px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="帮助与反馈"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_xuanze_jinru" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line_seting" />

    <RelativeLayout
        android:id="@+id/rel_act_setting_enter"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:layout_marginTop="1px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="商家入驻"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_xuanze_jinru" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line_seting" />

    <RelativeLayout
        android:id="@+id/rel_act_setting_about"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:layout_marginTop="1px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="关于23号信"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_xuanze_jinru" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line_seting" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" />

    <Button
        android:id="@+id/btn_act_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:background="@drawable/shape_bg_btn_act_login_click"
        android:enabled="true"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="32px" />
</LinearLayout>
