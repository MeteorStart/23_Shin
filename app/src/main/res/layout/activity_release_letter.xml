<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.xiujichuanmei.a23_haoxin.mvp.view.activity.ReleaseLetterActivity">

    <include layout="@layout/act_top" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="180px"
            android:text="标    题"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />

        <EditText
            android:id="@+id/tv_act_release_letter_title"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@null"
            android:drawableRight="@drawable/icon_fabu_title"
            android:hint="请输入标题"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="180px"
            android:text="话    题"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_act_release_letter_topic"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableRight="@drawable/icon_fabu_huati"
            android:hint="请选择话题"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="180px"
            android:text="位    置"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_act_release_letter_position"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:hint="请选择位置"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />

        <ImageView
            android:id="@+id/imv_act_choose_recipi_position"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/icon_fabu_position" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="180px"
            android:text="收 信 人"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_act_release_letter_receiver"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableRight="@drawable/icon_fabu_shouxinren"
            android:hint="请选择收件人"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="180px"
            android:text="信件编号"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />

        <EditText
            android:id="@+id/tv_act_release_letter_receive_number"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginRight="10px"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="请输入信件编号"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />

        <ImageView
            android:id="@+id/imv_act_choose_recipi_scan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/icon_fabu_saoyisao" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line" />

    <Button
        android:id="@+id/btn_act_release_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="60px"
        android:background="@drawable/select_btn_bg"
        android:enabled="false"
        android:text="确定"
        android:textColor="@drawable/select_btn_text_color_act_login"
        android:textSize="32px" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:lineSpacingExtra="12px"
        android:layout_marginBottom="20px"
        android:text=" 发布信件规则\n· 信件书写：为方便阅读，请工整书写。切勿当儿戏乱涂乱画；\n· 信件内容：禁止发送谣言、色情、恐怖等信息。\n 不得传播宣扬种族歧视、破坏民族团结等相关言论。\n 禁止发广告内容诱导用户关注；\n（被举报封号惩罚：第一次封号5天，第二次15天，第三次永久停封）\n· 填写的信件编号应与所使用的纸质信封编号一致。 "
        android:textColor="@color/black_text_999"
        android:textSize="24px" />
</LinearLayout>
