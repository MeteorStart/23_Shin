<?xml version="1.0" encoding="utf-8"?><!-- 店铺详情页列表Item -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imv_act_shop_detail_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_denglu_touxiang_weidenglu" />

    <RelativeLayout
        android:id="@+id/rel_act_shop_details_item"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/imv_act_shop_detail_avatar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_act_shop_detail_avatar_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隔壁王小明"
                    android:textColor="@color/black_text_333"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/text_act_shop_detail_number_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/text_act_shop_detail_number"
                    android:text="编号："
                    android:textColor="@color/black_text_666"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/text_act_shop_detail_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="26471"
                    android:textColor="@color/black_text_666"
                    android:textSize="13dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_act_shop_detail_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/icon_xinjian_label_huati"
                android:drawablePadding="5dp"
                android:text="#520告白"
                android:textColor="@color/yellow_item_shop_type"
                android:textSize="13dp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/text_act_shop_detail_shop_down_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imv_act_shop_detail_avatar"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/imv_act_shop_detail_avatar"
        android:background="@drawable/shape_bg_text_item_shap_details"
        android:drawableLeft="@drawable/icon_xinjian_time"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="剩余时间"
        android:textColor="@color/act_main_line"
        android:textSize="13dp" />

    <Button
        android:id="@+id/btn_act_shop_detail_shop_order"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_act_shop_detail_shop_down_time"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rel_act_shop_details_item"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_bg_btn_item_shap_details"
        android:drawableLeft="@drawable/icon_xinjian_button"
        android:drawablePadding="-5dp"
        android:paddingLeft="13dp"
        android:text="预约"
        android:textColor="@color/act_main_line"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_act_shop_detail_shop_empty"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textColor="@color/black_text_333"
        android:textSize="15dp" />
</RelativeLayout>