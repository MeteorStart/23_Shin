<?xml version="1.0" encoding="utf-8"?><!-- 流通信件item -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imv_act_flow_letter_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/icon_denglu_touxiang_weidenglu" />

    <RelativeLayout
        android:id="@+id/rel_act_flow_letter_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imv_act_flow_letter_avatar">

        <LinearLayout
            android:id="@+id/lay_act_flow_latter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_act_flow_letter_avatar_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隔壁王小明"
                    android:textColor="@color/black_text_333"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/text_act_flow_letter_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="编号：26471"
                    android:textColor="@color/black_text_999"
                    android:textSize="11dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_act_flow_letter_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/icon_xinjian_label_huati"
                android:drawablePadding="5dp"
                android:text="#520告白"
                android:textColor="@color/yellow_item_shop_type"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="完成时间："
                    android:textColor="@color/black_text_999"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_act_flow_letter_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:text="完成时间："
                    android:textColor="@color/black_text_999"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>