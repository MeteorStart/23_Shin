<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.xiujichuanmei.a23_haoxin.mvp.view.activity.ReleaseDemandActivity">

    <include
        android:id="@+id/lay_act_release_demand_top"
        layout="@layout/act_top" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line" />

    <LinearLayout
        android:id="@+id/lay_act_release_demand_address"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200px"
            android:text="位    置"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_act_release_demand_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:hint="请选择地址"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />

        <ImageView
            android:id="@+id/imv_act_release_demand_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5px"
            android:src="@drawable/icon_fabu_position" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="250px"
        android:padding="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200px"
            android:text="等信内容"
            android:textColor="@color/black_text_333"
            android:textSize="26px" />

        <EditText
            android:id="@+id/edit_act_release_demand"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="start"
            android:hint="请填写需要什么样的内容\n(500字以内)"
            android:lineSpacingExtra="5px"
            android:textColor="@color/black_text_333"
            android:textColorHint="@color/black_text_hint"
            android:textSize="26px" />

        <ImageView
            android:id="@+id/imv_act_release_demand_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5px"
            android:src="@drawable/icon_fabu_xuqiu" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line" />

    <Button
        android:id="@+id/btn_act_release_demand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="60px"
        android:background="@drawable/select_btn_bg"
        android:enabled="false"
        android:text="确定"
        android:textColor="@drawable/select_btn_text_color_act_login"
        android:textSize="32px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="60px"
        android:lineSpacingExtra="12px"
        android:text=" 发布信件规则\n· 信件书写：为方便阅读，请工整书写。切勿当儿戏乱涂乱画；\n· 信件内容：禁止发送谣言、色情、恐怖等信息。\n 不得传播宣扬种族歧视、破坏民族团结等相关言论。\n 禁止发广告内容诱导用户关注；\n（被举报封号惩罚：第一次封号5天，第二次15天，第三次永久停封）\n· 填写的信件编号应与所使用的纸质信封编号一致。 "
        android:textColor="@color/black_text_999"
        android:textSize="24px" />
</LinearLayout>
