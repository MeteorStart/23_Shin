<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiujichuanmei.a23_haoxin.mvp.view.activity.UserInfoToScanActivity">

    <ImageView
        android:id="@+id/imv_act_user_info_to_scan_close"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="40px"
        android:src="@drawable/icon_saomajieguo_guanbi" />

    <ImageView
        android:id="@+id/imv_act_user_info_to_scan_avatar"
        android:layout_width="140px"
        android:layout_height="140px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120px"
        android:src="@drawable/icon_denglu_touxiang_weidenglu" />

    <TextView
        android:id="@+id/tv_act_user_info_to_scan_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imv_act_user_info_to_scan_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28px"
        android:text="用户名"
        android:textColor="@color/act_main_line"
        android:textSize="30px" />

    <ImageView
        android:id="@+id/iv_act_user_info_to_scan_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tv_act_user_info_to_scan_username"
        android:layout_marginTop="86px"
        android:background="@color/cut_line" />

    <LinearLayout
        android:id="@+id/lay_act_user_info_to_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_act_user_info_to_scan_line"
        android:layout_marginTop="66px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_saomajieguo"
                android:drawablePadding="10px"
                android:paddingLeft="84px"
                android:text="发件人："
                android:textColor="@color/black_text_666"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tv_act_user_info_to_scan_send_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textColor="@color/black_text_666"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_saomajieguo"
                android:drawablePadding="10px"
                android:paddingLeft="84px"
                android:text="收件人："
                android:textColor="@color/black_text_666"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tv_act_user_info_to_scan_get_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textColor="@color/black_text_666"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_saomajieguo"
                android:drawablePadding="10px"
                android:paddingLeft="84px"
                android:text="信件编号："
                android:textColor="@color/black_text_666"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tv_act_user_info_to_scan_letter_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00000"
                android:textColor="@color/black_text_666"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_saomajieguo"
                android:drawablePadding="10px"
                android:paddingLeft="84px"
                android:text="发送到："
                android:textColor="@color/black_text_666"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tv_act_user_info_to_scan_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送地址-发送地址-发送地址"
                android:textColor="@color/black_text_666"
                android:textSize="28px" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_act_user_info_to_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_act_user_info_to_scan"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="100px"
        android:background="@drawable/select_btn_act_login"
        android:text="交付"
        android:textColor="@drawable/select_btn_text_color_act_login"
        android:textSize="32px" />
</RelativeLayout>
